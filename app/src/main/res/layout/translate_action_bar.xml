<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

        <variable
            name="translatePresenter"
            type="com.translator.brozzz.translator.presenter.TranslatePresenter" />

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/translate_from"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textAlignment="center" />

        <ImageButton
            android:id="@+id/btn_switch_lang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:clickable="true"
            android:onClick="@{() -&gt; translatePresenter.switchLang()}"
            android:src="@drawable/ic_swap_horiz_black_24dp" />

        <TextView
            android:id="@+id/translate_to"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textAlignment="center" />

    </LinearLayout>
</layout>